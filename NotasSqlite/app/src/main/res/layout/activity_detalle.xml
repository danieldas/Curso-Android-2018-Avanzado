<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAzul1"
    tools:context="com.android.curso.notassqlite.DetalleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFechaDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/10/10 10:10:10"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlanco" />

                <ImageView
                    android:id="@+id/imgGuardarDe"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_guardar" />

                <ImageView
                    android:id="@+id/imgEliminarDe"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_eliminar" />

            </LinearLayout>

            <EditText
                android:id="@+id/etTituloDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:elevation="20dp"
                android:hint="TÃ­tulo"
                android:maxLength="50"
                android:padding="8dp"
                android:textColor="@color/colorBlanco"
                android:textColorHint="@color/colorPlomo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorBlanco">

                <Spinner
                    android:id="@+id/spTipoDe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipo_arrays"
                    android:layout_marginTop="2dp"  />

            </LinearLayout>

            <EditText
                android:id="@+id/etContenidoDe"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="5dp"
                android:background="@color/colorPlomo1"
                android:gravity="top"
                android:maxLength="1000"
                android:padding="10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
